# Environment Configuration for Cart Service
ENVIRONMENT=development
PORT=8085

# Redis Configuration
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-for-cart-service

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Cart Configuration
CART_DEFAULT_TTL=720h  # 30 days
CART_GUEST_TTL=72h     # 3 days
CART_MAX_ITEMS=100
CART_MAX_ITEM_QTY=10
CART_CLEANUP_INTERVAL=1h

# External Services
PRODUCT_SERVICE_URL=http://localhost:8081
INVENTORY_SERVICE_URL=http://localhost:8082
ORDER_SERVICE_URL=http://localhost:8083
USER_SERVICE_URL=http://localhost:8084

# Server Configuration
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Distributed Tracing Configuration
TRACING_ENABLED=true
TRACING_SERVICE_NAME=cart-service
TRACING_SERVICE_VERSION=1.0.0
TRACING_JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACING_SAMPLE_RATE=1.0
